<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/fragmentHome">
    <fragment
        tools:layout="@layout/fragment_home"
        android:id="@+id/fragmentHome"
        android:name="com.challenge.foodappchallenge3.presentation.fragmenthome.FragmentHome"
        android:label="FragmentHome" >
        <action
            android:id="@+id/action_fragmentHome_to_fragmentDetail"
            app:destination="@id/fragmentDetail" />
    </fragment>
    <fragment
        android:id="@+id/fragmentDetail"
        android:name="com.challenge.foodappchallenge3.presentation.detailmenu.FragmentDetail"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="menu"
            app:argType="com.challenge.foodappchallenge3.model.Menu"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/fragmentCart"
        android:name="com.challenge.foodappchallenge3.presentation.cart.FragmentCart"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/fragmentProfile"
        android:name="com.challenge.foodappchallenge3.presentation.profile.FragmentProfile"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>